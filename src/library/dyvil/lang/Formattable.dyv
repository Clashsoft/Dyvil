package dyvil.lang

interface Formattable
{
	// for Java interop
	static func toString(formattable: Formattable) -> String = String(formatting: formattable)

	func toString(buffer: StringBuilder) -> void
}

extension String
{
	static func apply(formatting formattable: Formattable) -> String
	{
		let buffer = new StringBuilder
		formattable.toString(buffer)
		return buffer.toString
	}
}
