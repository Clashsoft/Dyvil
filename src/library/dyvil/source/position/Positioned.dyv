package dyvil.source.position

interface Positioned
{
	var position: SourcePosition!
	{
		get: this.getPosition()
		set: this.setPosition(newValue)
	}

	func getPosition() -> SourcePosition!

	func setPosition(position: SourcePosition!) -> void

	final func expandPosition(to: SourcePosition) -> void
	{
		if let from = this.getPosition()
		{
			this.setPosition(from .. to)
		}
		else
		{
			this.setPosition(to.raw)
		}
	}

	func lineNumber() -> int = this.position?.startLine ?? 0
}
