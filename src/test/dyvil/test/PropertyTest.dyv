package dyvil.test

public class PropertyTest
{
	interface AbstractProperty
	{
		int value { get; set }
	}
	
	class ConcreteProperty implements AbstractProperty
	{
		private boolean setterCalled = false
		{
			public get
			public set
		}

		private int value = 1
		{
			public override get
			public override set(newValue)
			{
				this.setterCalled = true
				this.value = newValue
			}
		}
	}
	
	public static void main([String] args)
	{
		var c = new ConcreteProperty

		Main.test("Property Initializer", 1, c.value)

		c.value = 20
		Main.test("Property Getter", 20, c.value)

		c.value = 10
		Main.test("Property Setter", true, c.setterCalled)
	}
}
