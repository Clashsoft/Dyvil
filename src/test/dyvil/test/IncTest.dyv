package dyvil.test

public class IncTest {
	public static void main([String] args) {
		localIntTest
		localLongTest
		staticTest
		instanceTest
	}

	private static void localIntTest() {
		int i = 0
        i += 2
        int result = i += 1

        Main.test("Local Int Increment", 3, result)
	}

	private static void localLongTest() {
		long l = 0
    	l += 3
    	int result = l += 1

    	Main.test("Local Long Increment", 4, result)
	}

	private static int counter = 0

	private static void staticTest() {
		counter += 4
		int result = counter += 1

		Main.test("Static Increment", 5, counter)
	}

	private static class Counter {
		int value = 0
	}

	private static void instanceTest() {
		instanceStatementTest(new Counter)
		instanceExpressionTest(new Counter)
	}

	private static void instanceStatementTest(Counter counter) {
		counter.value += 2

		Main.test("Instance Statement Increment", 2, counter.value)
	}

	private static void instanceExpressionTest(Counter counter) {
		int result = counter.value += 5

		Main.test("Instance Expression Increment", 5, counter.value)
	}
}
