package dyvil.tests

public class BooleanTest
{
	public static void main([String] args)
	{
		System.out.println("----- true, true -----");
		test(true, true);
		System.out.println("----- true, false -----");
		test(true, false);
		System.out.println("----- false, true -----");
		test(false, true);
		System.out.println("----- false, false -----");
		test(false, false);
	}
	
	public static void test(boolean b1, boolean b2)
	{
		if (b1)			System.out.println("b1:\t\t"		+ b1			);
		if (!b2)		System.out.println("!b2:\t\t"		+ !b2			);
		if (b1 & b2)	System.out.println("b1 & b2:\t"		+ (b1 & b2)		);
		if (b1 && b2)	System.out.println("b1 && b2:\t"	+ (b1 && b2)	);
		if (b1 | b2)	System.out.println("b1 | b2:\t"		+ (b1 | b2)		);
		if (b1 || b2)	System.out.println("b1 || b2:\t"	+ (b1 || b2)	);
		if (b1 ^ b2)	System.out.println("b1 ^ b2:\t"		+ (b1 ^ b2)		);
		if (b1 == b2)	System.out.println("b1 == b2:\t"	+ (b1 == b2)	);
		if (b1 != b2)	System.out.println("b1 != b2:\t"	+ (b1 != b2)	);
		if (b1 ==> b2)	System.out.println("b1 ==> b2:"		+ (b1 ==> b2)	);
		if (b1 <=> b2)	System.out.println("b1 <=> b2:"		+ (b1 <=> b2)	);
	}
}
