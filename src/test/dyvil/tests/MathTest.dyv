package dyvil.tests

using dyvil.Test
using dyvil.math.MathUtils.sqrt

public class MathTest
{
	public static func apply(): Test = test "Math" {
	}

	private static func isPrime(int value): boolean
	{
		for var j <- 2 .. value.sqrt
		{
			if value % j == 0
			{
				return false
			}
		}
		return true
	}

	private static func primeFactors(int value): List<int>
	{
		if value <= 1
		{
			return List(1)
		}

		let res = List<int>

		label outer:
		while value > 1
		{
			for prime <- 2 .. value
			{
				if value % prime == 0 && isPrime(prime)
				{
					res.add(prime)
					value \= prime
					continue outer
				}
			}
		}

		return res.immutable
	}
}
